@model PCBookWebApp.Models.ViewModels.EmailFormModel
@{
    ViewBag.Title = "Contact";
}

@if (Request.IsAuthenticated)
{
    <div ng-app="PCBookWebApp" style="margin-top:2em;">
        <div ng-view></div>
    </div>
    <center><h4>Send your comments.</h4></center>
    <hr />
    <div class="col-md-offset-2 col-md-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromEmail)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Message)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input style="margin-top:1em;" type="submit" class="btn btn-default" value="Send Message" />
                </div>
            </div>
        }
    </div>


}
